function getPage() {
	var searchType = $("#searchType").val();
	var search = $("#keyword").val();
	console.log("::::11111:::::" + searchType);
	console.log("::::22222:::::" + search);
	$.ajax({
				url : "/page/KW90000/KW90000U6100selectList", //서비스 주소 
				data : {  //서비스 처리에 필요한 인자값
					searchType : searchType,
					keyword : search			
				},
				success : function(res) {
					const list = res['resultList'];
					var totalCnt = "";
					var data = "";
					var block = "";

					if(list.length != 0){	
					// 테이블의 row를 삽입하는 부분
					for (var i = 0; i < list.length; i++) {
						data += '<tr style="cursor: pointer; " onclick="rowClick(this)" data-mbrSeq="'+ list[i].mbrSeq +'">';
						data += '<td class="rnum" style="width:40px">' + list[i].rnum + '</td>';
						data += '<td class="mbrId" style="width:270px">' + list[i].mbrId + '</td>';
						data += '<td class="mbrNm" style="width:78px">' + list[i].mbrNm + '</td>';
						data += '<td class="bzCoNm" style="width:130px">' + list[i].bzCoNm + '</td>';
						data += '<td class="bdt" style="width:90px">' + list[i].bdt + '</td>';
						data += '<td class="fonNo" style="width:100px">' + list[i].fonNo + '</td>';
						data += '<td class="gndrTp">' + list[i].gndrTp + '</td>';
						data += '</tr>';
					}
					} else {
						data += "<tr id='deleteCol'>";
						data += "<td colspan='8'>등록된 게시글이 없습니다.</td>";
						data += "</tr>";						
					} 

					$("#dataSection").html(data);
					$("#saveBtn").hide();
				}
			})
}

//사업장명 버튼 클릭  
function rowClick(obj) {
	//부모창의 id가 id인 input 이라는 문자열 저장하기   
	let mbrSeq = obj.getAttribute("data-mbrSeq");
	$("#mbrSeq").val(mbrSeq);
    getInfoPage();
}
	
